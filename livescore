<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Scores</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: white;
            background-color: black;
            text-align: center;
        }
        #score {
            font-size: 48px;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div id="score">Loading...</div>

    <script>
        async function fetchLiveScore() {
            const response = await fetch('https://api.example.com/live-scores', {
                headers: { 'Authorization': 'Bearer YOUR_API_KEY' }
            });
            const data = await response.json();

            // Assuming the API returns team names and scores
            const team1 = data.team1.name;
            const team2 = data.team2.name;
            const score1 = data.team1.score;
            const score2 = data.team2.score;

            document.getElementById('score').innerText = `${team1} ${score1} - ${score2} ${team2}`;
        }

        // Fetch the score every 30 seconds
        setInterval(fetchLiveScore, 30000);
        fetchLiveScore(); // Initial fetch when the page loads
    </script>
</body>
</html>
